<%= simple_form_for(@comment) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.input :pin_id %>
    <%= f.input :body %>
    <%= f.input :author, as: :text, input_html: { rows: "1" }, label: "Posted by" %>
  </div>

  <div class="form-actions">
    <%= f.button :submit %>
  </div>
<% end %>
