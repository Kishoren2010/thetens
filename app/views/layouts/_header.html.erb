<div class="navbar navbar-fixed-top">
  <div class="navbar-inner">
      <div class="container">
          <a class="btn btn-navbar" data-toggle="collapse" data-target=".nav-collapse">
              <span class="icon-bar"></span>
              <span class="icon-bar"></span>
              <span class="icon-bar"></span>
          </a>
           <%= link_to "theTens", root_path, class: "brand" %>

              <div class="nav-collapse">
                  <ul class="nav">
                      <li>    
                          <%= link_to 'About',  about_path %>
                      </li>
                      <li>    
                          <%= link_to 'Reviewers',  reviewers_path %>
                      </li>
                  </ul>
                  <form action="/pins" class="navbar-search pull-left" method="get">
                    <input id="search" type="text" name="search" class="search-query" placeholder="Search">
                    <%= image_submit_tag("search.png", :name => nil) %>
                  
                  </form>   

                  <a href="https://twitter.com/share" class="twitter-share-button" data-size="small" data-hashtags="thetens">Tweet</a>
                    <script>!function(d,s,id){var js,fjs=d.getElementsByTagName(s)[0],p=/^http:/.test(d.location)?'http':'https';if(!d.getElementById(id)){js=d.createElement(s);js.id=id;js.src=p+'://platform.twitter.com/widgets.js';fjs.parentNode.insertBefore(js,fjs);}}(document, 'script', 'twitter-wjs');
                    </script>

                  <a class="social_logo_nav" href="/images/FB_logo.png" 
                      onclick="
                      window.open(
                      'https://www.facebook.com/sharer/sharer.php?u='+encodeURIComponent(location.href), 
                      'facebook-share-dialog', 
                      'width=626,height=436'); 
                      return false;">
                    <%= image_submit_tag("FB_logo.png", :name => nil) %>
                  </a>
            
                  <ul class="nav pull-right">
                    <% if user_signed_in? %>
                      <li><%= link_to 'Add +',  new_pin_path %></li>
                      <li><%= link_to 'Edit Profile',  edit_user_registration_path %></li>
                      <li><%= link_to 'Logout',  destroy_user_session_path, method: :delete %></li>
                      <li><%= link_to (image_tag current_user.image(:small), class: "smallpic") %></li>
                      <% else %>
                      <li><%= link_to 'Login',  new_user_session_path %></li>
                    <% end %>  
                  </ul>
              </div>
      </div>
  </div>
</div>