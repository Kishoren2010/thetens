<h1>Covers</h1>


<% @pins.shuffle.each do |pin| %>
  <div class="covers">
    <%= link_to (image_tag pin.image), pin %>
    <%= link_to pin do %>
      <p class="cover-text"><%= truncate(pin.album, length:20) %> <br/>by<br/> <%= pin.artist %> <br/><%= link_to "Review This Abum", copy_pin_path(pin) %></p>

    <% end %>  
  </div>
<% end %>  
