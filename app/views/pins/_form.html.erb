<%= simple_form_for(@pin, html: { class: "form-horizontal"}) do |f| %>
	  <%= f.error_notification %>
	  <%= f.full_error :image_file_size, class: "alert alert-error" %>
	  <%= f.full_error :image_content_type, class: "alert alert-error" %>

    <%= f.input :image, label: "Upload an image" %>
    <%= f.input :image_remote_url, label: "Or enter a url" %>
    <%= f.input :artist, as: :text, input_html: { rows: "1" }, label: "Artist" %>
    <%= f.input :album, as: :text, input_html: { rows: "1" }, label: "Album Title" %>
    <%= f.input :description, as: :text, input_html: { rows: "3" }, label: "Review" %>

  <div class="form-actions">
    <%= f.button :submit, class: "btn btn-primary" %>
  </div>
<% end %>
