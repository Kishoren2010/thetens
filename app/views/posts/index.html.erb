<div class="container">
  <div class="blog_container">
    <div class="blog_title">
      <h1>theBlog</h1>
      <br/>
    </div>
    <div>
      <%= link_to 'New Post', new_post_path, class: "btn btn-primary" %>
    </div>        
      <div class="col-lg-8 blog_posts">
        <% @posts.each do |post| %>
          <hr>
          <h1><%= post.title %></h1>
          <p class="lead blog_pic">by <%= link_to post.user.name, post.user %> | <%= image_tag post.user.image(:small) %></p>
          
                    
                    <hr>
                    <%= link_to (image_tag post.image(:medium)), post %>
                    <hr>
                    <p><%= simple_format post.body %></p>

                    <br/>
            <p><%= link_to 'Show', post %>
              <%= link_to 'Edit', edit_post_path(post) %>
              <%= link_to 'Destroy', post, method: :delete, data: { confirm: 'Are you sure?' } %>

            <i class="fa fa-clock-o"></i> <%= post.created_at.strftime("%m/%d/%Y") %></p>
                    <hr>  
        <% end %>
        <%= will_paginate @posts %>
        <p style="text-align:left;"><a href="#">Back To The Top</a></p>
      </div> <!-- blog_posts--> 
      <div class="col-lg-4">
                <div class="well blog_search">
                  <h4>Blog Search</h4>
                    <form class="navbar-form" role="search">
                      <div class="input-group">
                        <input type="text" class="form-control" placeholder="Search" name="searchblog" id="searchblog">
                          <div class="input-group-btn">
                            <button class="btn btn-default" type="submit"><i class="glyphicon glyphicon-search"></i></button>
                          </div>
                      </div>
                    </form> <!-- search -->        
                </div>
                <!-- /well -->
                <div class="well">
                    <h4>Recent Posts</h4>
                    <div class="row">
                        
                    </div>
                </div>
                <!-- /well -->
                <div class="well">
                    <h4>Side Widget Well</h4>
                    <p>Bootstrap's default well's work great for side widgets! What is a widget anyways...?</p>
                </div>
                <!-- /well -->
            </div>
        </div>
  </div>

</div>  